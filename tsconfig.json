{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build/",
    "rootDir": "./src/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src/",
    "paths": {
        "plotly.js": [
            "./node_modules/plotly.js/lib/index.js",
            "./node_modules/plotly.js/lib/scatter.js"
        ]
    },
    // Strict type-checking options
    "strict": true,
    "noImplicitAny": true,
    

  },
  "parcelTsPluginOptions": {
    // If true type-checking is disabled
    "transpileOnly": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}